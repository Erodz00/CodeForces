import java.util.Scanner;

public class Watermelon4A {

	public static void main(String[] args) {
			Scanner scan = new Scanner (System.in);
			int a=scan.nextInt();
      scan.close();
			if(a==2) {
				System.out.println("NO");
				return;
			}
			if(a%2==0) {
				System.out.println("YES");
				return;
			}
			System.out.println("NO");
	}
}
